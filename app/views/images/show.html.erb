<%= stylesheet_link_tag 'landing_page' %>
<div class="container">
  <div class="overlay noise"></div>
  <div class="overlay stars"></div>

  <div class="content-left result-page">
    <h1 class="title">
      Your picture is <span>ready</span>
    </h1>
    
    <div class="actions" style="margin-top: 4cqw;">
      <a href="<%= download_path(@image) %>" class="pill-btn primary">
        Download 2048px
      </a>
      <a href="/" class="pill-btn secondary">
        Soften another one
      </a>
    </div>
  </div>

  <div class="comparison-container">
    <div class="image-comparison" id="image-comparison">
      <div class="image-before">
        <img src="<%= @image.file.url(:half) %>" alt="Before">
      </div>
      <div class="image-after">
        <img src="<%= @image.file.url(:halfsoft) %>" alt="After">
      </div>
      <div class="comparison-slider">
        <div class="slider-line"></div>
        <div class="slider-button">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.comparison-container {
  position: absolute;
  top: 50%;
  right: 5%;
  transform: translateY(-50%);
  width: 50cqw;
  height: 50cqw;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 5;
}

.image-comparison {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 2cqw;
  overflow: hidden;
  box-shadow: 0 2cqw 5cqw rgba(0,0,0,0.3);
  border: 0.1cqw solid rgba(255,255,255,0.2);
}

.image-comparison img {
  width: 50cqw;
  height: 50cqw;
  object-fit: cover;
  display: block;
}

.image-before {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.image-after {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  clip-path: inset(0 0 0 50%);
}

.comparison-slider {
  position: absolute;
  top: 0;
  left: 50%;
  width: 0.2cqw;
  height: 100%;
  background: white;
  z-index: 3;
  cursor: ew-resize;
}

.slider-line {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 0.3cqw;
  height: 100%;
  background: rgba(255,255,255,0.8);
  box-shadow: 0 0 1cqw rgba(0,0,0,0.5);
}

.slider-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 4cqw;
  height: 4cqw;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 0.5cqw;
  box-shadow: 0 0.5cqw 1.5cqw rgba(0,0,0,0.3);
  color: #333;
}

.slider-button svg {
  width: 1.5cqw;
  height: 1.5cqw;
}

.result-page .title {
  font-size: 5cqw;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const container = document.getElementById('image-comparison');
  const slider = container.querySelector('.comparison-slider');
  const afterImage = container.querySelector('.image-after');
  let isResizing = false;

  const moveSlider = (e) => {
    if (!isResizing) return;
    
    let x;
    if (e.type === 'touchmove') {
      x = e.touches[0].clientX - container.getBoundingClientRect().left;
    } else {
      x = e.clientX - container.getBoundingClientRect().left;
    }
    
    let position = (x / container.offsetWidth) * 100;
    
    if (position < 0) position = 0;
    if (position > 100) position = 100;
    
    slider.style.left = `${position}%`;
    afterImage.style.clipPath = `inset(0 0 0 ${position}%)`;
  };

  slider.addEventListener('mousedown', () => isResizing = true);
  window.addEventListener('mouseup', () => isResizing = false);
  window.addEventListener('mousemove', moveSlider);
  
  slider.addEventListener('touchstart', () => isResizing = true);
  window.addEventListener('touchend', () => isResizing = false);
  window.addEventListener('touchmove', moveSlider);
});
</script>
